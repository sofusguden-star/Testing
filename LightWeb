        // Contact form
        const contactForm = document.getElementById("contact-form");
        contactForm.addEventListener("submit", (e) => {
            e.preventDefault();
            document.getElementById("form-msg").innerText = "Message sent! We'll contact you soon.";
            contactForm.reset();
